/* pages/weather/weather.wxss */
.content {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    font-family: 微软雅黑, 宋体;
    box-sizing: border-box;
    padding: 20rpx 10rpx;
    color: #252525;
    font-size: 16px;
    background-color: #F2F2F8;
}

/* 当前天气信息 */
.info {
    margin-top: 50rpx;
    width: 100%;
    height: 160rpx;
}

/* 城市名称 */
.city {
    margin: 20rpx;
    border-bottom: 1px solid #043567;
}

/* 当天温度 */
.temp {
    font-size: 120rpx;
    line-height: 130rpx;
    text-align: center;
    padding-top: 20rpx;
    color: #043567;
}

